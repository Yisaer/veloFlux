{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "header-max-length": [
            2,
            "always",
            50
        ],
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "perf",
                "test",
                "build",
                "ci",
                "chore"
            ]
        ],
        "type-case": [
            2,
            "always",
            "lower-case"
        ],
        "scope-case": [
            2,
            "always",
            "lower-case"
        ],
        "subject-case": [
            0
        ],
        "subject-full-stop": [
            2,
            "never",
            "."
        ],
        "signed-off-by": [
            2,
            "always",
            "Signed-off-by:"
        ]
    }
}